ASCII

# Set the animation speed (adjust as needed)
animation_speed = 0.05

system('clear')  # Clear the console 

# Rotate the colors
colors.rotate!

# Color and print the donut
donut_lines = donut.split("\n")
donut_lines.each do |line|
  colored_line = ''
  line.each_char.with_index do |char, index|
    color = colors[index % colors.length]
    colored_line += Customization.color_text(char, color)
  end
  puts colored_line
  sleep(animation_speed)
end
